{
  "name": "fab-spec",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "build:codesandbox": "lerna exec -- npm pack",
    "build:watch": "lerna run build:watch --parallel",
    "clean": "lerna run clean --parallel",
    "link-all": "lerna exec -- yarn link",
    "prettify": "prettier \"packages/**/*.{js,ts,tsx}\" --write",
    "test": "lerna run test --stream --parallel",
    "test:watch": "lerna run test --stream --parallel -- --watch",
    "typecheck": "tsc --noEmit",
    "version:patch": "lerna version patch --exact --force-publish --yes",
    "version:prerelease": "lerna version prerelease --exact --force-publish --yes",
    "publish:latest": "lerna publish from-package --yes --dist-tag latest",
    "publish:next": "lerna publish from-package --yes --dist-tag next"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn typecheck"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@ts-tools/node": "^1.1.2",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.5.4",
    "chai": "^4.2.0",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~3.7.2"
  },
  "resolutions": {
    "bl@~0.8.1": "0.9.5"
  },
  "version": "0.0.0"
}
